%body{ :background => image_path("background.jpg"), :style => "background-repeat:no-repeat; background-position:rigth-bottom;" }
  .container
    .row
      .span4.offset4.well
        %legend Registrarse
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = devise_error_messages!

          = f.label :email
          = f.text_field :email, :class => 'span4', placeholder: '@email'

          = f.label :password
          = f.password_field :password, class: 'span4', placeholder: 'Contraseña'

          = f.label :password_confirmation
          = f.password_field :password_confirmation, class: 'span4', placeholder: 'Confirmación de la contraseña'


          = f.submit 'Sign up', class: 'btn btn-info btn-block'

        = render "devise/shared/links"
