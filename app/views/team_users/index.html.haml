%h1 Players

- if user_signed_in? and !current_user.blank?
  = button_to "my players", team_path(current_user.team), {:method => :get, :class => "btn btn-mini btn-info", :type => "button"}
- if user_signed_in? and current_user.team.blank?
  = button_to "create a team", new_team_path, {:method => :get, :class => "btn btn-mini btn-primary", :type => "button"}
- if !user_signed_in?
  = button_to "create a team", new_team_path, {:method => :get, :class => "btn btn-mini btn-primary disabled", :type => "button"}

%table{:class => "table table-striped"}
  - for player in @team_users
    %tr
      %td
        %div{:class => "media"}
          %a{:class => "pull-left", :href => "#"}
            - if player.user.profile.avatar?
              = image_tag player.user.profile.avatar, size: "64x64"
            - else
              = image_tag "profile_default.jpg", size: "64x64"
          %div{:class => "media-body"}
            %h4{:class => "media-heading"}=link_to "#{player.user.name}", player
      %td
        %div{:class => "btn-group"}
          %a{:class => "btn dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
            Action
            %span{:class => "caret"}
          %ul{:class => "dropdown-menu", :role => "menu", "aria-labelledby" => "dropdownMenu"}
            %li
              %a{:tabindex => "-1", :href =>"#"}
                Eliminar
            %li
              %a{:tabindex => "-1", :href =>"#"}
                Ver